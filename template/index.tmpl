<html>
	<head>
		<title>UWCS Gaming</title>
		<link href="static/main.css" rel="stylesheet" type="text/css" />
		<link href="static/favicon.ico" rel="shortcut icon" type="image/vnd.microsoft.icon" />
		<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
		<script type="text/javascript" src="static/main.js"></script>
	</head>
	<body>
		<div id="container">
			<div id="header">
				<div id="logo">
					<img src="static/logo.png" />
				</div>
			</div>
			<div id="page">
				<div id="sidebar">
					<ul>
						<li>
							<h2>Installed:</h2>
						</li>
						<% for(var i in packages){
							if(packages[i].type=="game" && packages[i].installed == 1)
						%>
							<li>
								<a href="#<%=i%>" title="<%=i%>"><%=i%></a>
							</li>
						<% } %>
					</ul>
				</div>
				<div id="content">
					<h1>Welcome to gaming-get</h1>
					<h2>Available packages:</h2>
					<% for(var i in packages){
						if(packages[i].type == "game") {%>
						<div class="package" id="<%=i%>">
						<% if(packages[i].installed == 1){ %>
							<a class="launch" href="#" onclick="launch('<%=i%>');return false" title="<%=i%>" >Launch</a>
						<% }else{%>
							<a class="launch" href="#" onclick="launch('<%=i%>');return false" title="<%=i%>" style="display:none" >Launch</a>
							<a class="install" href="#" onclick="install('<%=i%>');return false" title="<%=i%>" ><img src="static/button.png"></a>
						<% } %>
							<span class="title"><a href="#" onclick="toggleVisible('<%=i%>');return false" ><%=i%></a></span>
							<span class="info"><%=packages[i].description%></span>
							<span class="progress">
								<div class="barContainer">
									<div class="undone"></div>
									<div class="done"></div>
								</div>
							</span>
						</div>
					<% }} %>
				</div>
				<div id="footer-spacer"></div>
			</div>
		</div>
		<div id="footer">
			<span>&copy; University of Warwick Computing Society</span>
		</div>
	</body>
</html>
